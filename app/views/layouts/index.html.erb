<!-- #index.html.erb -->

<%= link_to 'Create an Adnventure', new_adventure_path %> <br /><br />

<% @adventures.each do |adventure| %>

<%= link_to adventure.title, adventure_path(adventure) %> by: <%= adventure.author %> <br />

<h4>Add your Library</h4>
  <%= form_for 'add URL' do |f| %>
  <%= f.text.field :url, placeholder: 'Enter Url' %><br />
  <%= f.submit 'Submit' %>
  <% end %>