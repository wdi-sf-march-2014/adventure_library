<h1>My Adventures</h1>
<% @my_adventures.each do |a| %>
  <li><%= link_to "'#{a.title}'", adventure_pages_path(a.id) %></li>
<% end %>

<h1>All the Adventures I know</h1>
<% @adventures.each do |ad| %>
  <li><%= link_to "'#{ad.title}'", adventure_pages_path(ad.id) %></li>
<% end %>

<br><br><br><p><%= link_to "Add a new adventure", new_adventure_path %></p>

<h5> Enter a URL to scrape here </h5>
<%= form_for :link, :url => adventures_scrape_path, :html => {:method => :post} do |f| %>
  <%= f.label :url %>
  <%= f.text_field :url, placeholder: 'Start with http://' %>
  <%= f.submit %>
<% end %>