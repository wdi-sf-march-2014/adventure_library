<h1>Adventures</h1>

<%= link_to "Add Adventure", new_adventure_path, :class => "btn btn-success" %>  

  <% @adventures.each do |adventure| %>
    <li><b><%= adventure.author %>:
    <%= link_to adventure.title, adventure_path(adventure.id) %>
    <%= link_to "Edit", edit_adventure_path(adventure), :class => "btn btn-info btn-sm" %>
    <%= link_to "Delete", adventure_path(adventure.id), :method => :delete, data: { :confirm => 'Are you sure?'}, :class => 'btn btn-danger btn-sm' %></b></li>
  <% end %>

<br></br>
<!-- add new library from external site to list above -->
<%= form_for @library do |l| %>
  <%= l.text_field :url, placeholder: "http://example.com/" %>
  <%= l.submit "Add a Library for Scraping"%>
<% end %>