<h1>EDit</h1>

<%= form_for(@adventure) do |f| %> 
  <%= f.text_field :title, placeholder: "#{@adventure.title}" %> 
  <%= f.text_field :author, placeholder: "#{@adventure.author}" %>
  <%= f.submit %>
<% end %>

<%= link_to 'index', adventures_path %>
<%= link_to 'add a page', new_adventure_page_path(@adventure, @page) %>