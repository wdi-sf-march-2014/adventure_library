<h1> Create new adventure </h1>
<%= form_for @adventure do |f| %>
  <%= f.text_field :title, placeholder: "Title" %><br></br>
  <%= f.text_field :author, placeholder: "Author" %><br></br>
    <%= f.fields_for :pages, @page do |b| %><br> 
    <%= b.hidden_field :name, value: "start" %><br>
    <%= b.text_area :text, placeholder: "So what's your story? Linking to another story is simple! Just type [[link text|linked_to_page_name]]" %>
    <%= b.hidden_field :name, value: "end" %><br>
    <%= b.text_area :text, placeholder: "Page Text" %><br>
    <% end %>
    <br>
  <%= f.submit "Submit", :class => "btn btn-success" %>
<% end %><br>

<p><%= link_to("Home", root_path) %></p>